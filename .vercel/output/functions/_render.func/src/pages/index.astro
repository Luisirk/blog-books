---

import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import "../styles/global.css";


const books = await getCollection('books')

---

<Layout title="Mis libros">
	<main class="mt-120">
		<h1 class="text-center text-7xl font-extrabold mb-24"> Toda mi lectura :ðŸ“– </h1>
	</main>
	

	<section aria-label="Libros leidos" class="max-w-7xl mx-auto px-8">
		<div class="px-4 mx-auto max-w-screen-xl">
			<div class="grid gap-6 md:grid-cols-2">
			{
				books.map(book=>{
					const {slug, data} = book
					const { title, author, img, pages, description, buy } = data
					return(

						<article class="flex">
							
							<a href={`/libro/${slug}`} class="mb-2 xl:mb-0 transition duration-210 ease-out group">
								
								<img src={`/${img}`} 
									alt={title} 
									transition:name={`img-${slug}`}
									class="mr-5 w-58 rounded transition-transform  duration-90 ease-in  group-hover:scale-130 group-hover:duration-210 relative group-hover:z-50 "													
									/>
							</a> 

							<div class="flex flex-col justify-center ">
								
								<h2 transition:name={`img-${title}`} class="ml-4 mb-2 text-2xl font-bold leading-tight text-white">
									{title}
								</h2>
								<p class = "ml-4 mb-4 text-gray-300 max-w-sm"> {description}</p>
								<span class="text-xs ml-4 text-gray-200"> ðŸ“„  {pages} hojas</span>
							</div>
						</article>
					)

				})

			}
					
			</div>
		</div>
	</section>


	
</Layout>
